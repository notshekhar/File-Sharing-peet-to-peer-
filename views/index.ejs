<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Share files</title>
        <script src="./js/peerjs.min.js"></script>
        <script src="./js/socket.io.js"></script>
        <link rel="stylesheet" href="./css/index.css" />
        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css"
        />
        <script>
            const ROOM_ID = "<%= id %>"
        </script>
    </head>
    <body>
        <div class="new_message">
            <i>show</i>
        </div>
        <div class="root">
            <div class="share_file_container">
                <div class="connected-users">
                    <div class="title">Connected Users</div>
                    <div class="waiting">Waiting for user to connect....</div>
                    <div class="users"></div>
                </div>
                <div class="send">
                    <div class="drop_file">
                        <input type="file" />
                        <div class="icon"></div>
                        <div>
                            Drag and Drop File or
                            <span class="browse">Browse</span>
                        </div>
                    </div>
                </div>
                <div class="history"></div>
            </div>
            <div class="chat">
                <div class="body"></div>
                <div class="input">
                    <input type="text" placeholder="Enter a Text" />
                    <button><i class="fas fa-2x fa-paper-plane"></i></button>
                </div>
            </div>
        </div>
    </body>
    <script type="module" src="./js/index.js"></script>
</html>
